<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/amBgImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_1"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:rotation="90"
        android:src="@drawable/shape_gradient_black"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="welcome to ðŸ‘‹"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/amBrandName"
        />

    <TextView
        android:id="@+id/amBrandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Brand_name"
        android:textSize="45sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/amdesc"
        />

    <TextView
        android:id="@+id/amdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get services from one application"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>