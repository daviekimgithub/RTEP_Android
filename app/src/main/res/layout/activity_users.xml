<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/psProfileImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/img_persons_avatar"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/psPServiceNumberCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psProfileImg"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psPServiceNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Public Service Number"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/psFirstnameCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psPServiceNumberCV"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psEnterFirstname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="First Name"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/psLastnameCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psFirstnameCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psEnterLastname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Last Name"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/psEmailCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psLastnameCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psEnterEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/psIDCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psLastnameCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psEnterID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ID"
                android:inputType="number"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/psMobileNoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psEmailCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psEnterMobileNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/psHomeAddressCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psEnterHomeAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Home Address"
                android:inputType="text"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/psDesignationCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psEnterDesignation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Designation"
                android:inputType="text"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/psEmpTypeCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <EditText
                android:id="@+id/psEnterEmpType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Employment Type"
                android:inputType="text"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/psDepartmentCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <Spinner
                android:id="@+id/psDepartment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/psGenderCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <Spinner
                android:id="@+id/psGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/psRoleCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <Spinner
                android:id="@+id/psRole"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/psDOBCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <Button
                android:id="@+id/psEnterDOB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Date of Birth"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/psDOHCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            >
            <Button
                android:id="@+id/psEnterDOH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Date of Hire"
                android:textSize="18sp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/shape_corner10"
                app:layout_constraintTop_toBottomOf="@+id/siTitle"
                />

        </androidx.cardview.widget.CardView>


        <!--        <androidx.cardview.widget.CardView-->
<!--            android:id="@+id/psEmpTypeCardView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:cardCornerRadius="10dp"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/psMobileNoCardView"-->
<!--            android:layout_marginHorizontal="30dp"-->
<!--            android:layout_marginVertical="10dp"-->
<!--            >-->
<!--            <EditText-->
<!--                android:id="@+id/psEnterEmpType"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
